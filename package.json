{
  "name": "regl-ts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "ci": "yarn run test && yarn run coverage",
    "clean": "rimraf dist",
    "coverage": "codecov",
    "dev": "webpack-dev-server --config webpack.config.js --mode development --open",
    "format": "prettier --write '{,!(node_modules)/}**/*.{js,jsx}'",
    "lint:css": "stylelint './src/**/*.tsx'",
    "ncu": "ncu",
    "ncuu": "ncu --upgrade",
    "nuke": "rimraf node_modules && rm yarn.lock",
    "ts": "tslint --project . && tsc"
  },
  "dependencies": {
    "@types/jest": "23.3.10",
    "@types/node": "10.12.18",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "2.1.2",
    "typescript": "3.2.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
